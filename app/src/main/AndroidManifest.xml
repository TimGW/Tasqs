        <activity
                android:name=".ui.signin.view.SignInActivity"
                android:theme="@style/AppTheme.Login"/>
        <activity
                android:name=".ui.eventcategory.view.EditEventCategoryActivity"
                android:windowSoftInputMode="stateVisible|adjustResize"/>
        <activity android:name=".ui.agenda.ui.EditAgendaEventActivity"/>
