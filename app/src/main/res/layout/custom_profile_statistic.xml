<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_gravity="center">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Punten 324221313123423"
            android:textSize="20sp"
            android:lines="2"
            android:ellipsize="end"
            android:id="@+id/profile_stat_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="center"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="25"
            android:textSize="20sp"
            android:textColor="@color/color_accent"
            android:textStyle="bold"
            android:id="@+id/profile_stat_value"
            app:layout_constraintEnd_toEndOf="@+id/profile_stat_header"
            app:layout_constraintStart_toStartOf="@+id/profile_stat_header"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_stat_header" android:layout_marginTop="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>