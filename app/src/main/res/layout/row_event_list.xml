<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/rowBG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@color/color_alpha_10"
        android:gravity="end"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/task_done"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/cd_mark_as_done"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_check" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rowFG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:colorBackground"
        android:clickable="true"
        android:elevation="4dp"
        android:focusable="true"
        android:orientation="horizontal"
        android:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_view_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackground"
                android:padding="8dp">

            <TextView
                    android:id="@+id/event_user"
                    style="@style/Text.Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@id/event_repeat_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Tim Gortworst"/>

            <TextView
                    android:id="@+id/event_date_time"
                    style="@style/Text.Body1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/next_occurance"
                    app:layout_constraintBottom_toTopOf="@+id/event_name"
                    app:layout_constraintEnd_toStartOf="@id/event_repeat_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/event_user"
                    tools:text="20:00 - 21:00" app:layout_constraintHorizontal_bias="0.5"/>

            <TextView
                    android:id="@+id/event_name"
                    style="@style/Text.Body1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/event_repeat_label"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="Stofzuigen" app:layout_constraintTop_toBottomOf="@+id/event_date_time"
                    app:layout_constraintHorizontal_bias="0.5"/>

            <com.timgortworst.roomy.customview.RepeatIcon
                    android:id="@+id/event_repeat_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/event_name"
                    app:layout_constraintTop_toTopOf="@id/event_date_time"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:visibility="visible"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</RelativeLayout>